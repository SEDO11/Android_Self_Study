<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/weather">


    <EditText
        android:id="@+id/editcity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="지역 입력"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/dateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editcity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="dateView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="cityView"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tempView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cityView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="tempview"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/humiView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tempView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="humiView"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/weatherView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/humiView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="weatherView"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/weatherBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weatherView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="날씨 확인하기" />

</RelativeLayout>